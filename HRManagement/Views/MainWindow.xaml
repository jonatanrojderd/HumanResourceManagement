<Window x:Class="HRManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:HRManagement.ViewModels"
        xmlns:views="clr-namespace:HRManagement.Views"
        mc:Ignorable="d"
        Title="Human Resource Management" 
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl x:Name="TabControl"
                    ItemsSource="{Binding TabItems}"
                    Margin="10, 10, 0, 0" 
                    Height="400"
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:EmployeeViewModel}">
                    <views:EmployeeControl></views:EmployeeControl>
                </DataTemplate>
            </TabControl.Resources>

            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Header" Value="{Binding Header}"></Setter>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </Grid>
</Window>
